<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O泡果奶"
        android:id="@+id/tv_op"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="4dp"
        android:onClick="startMyService"
        android:text="@string/start_player_service"
        app:layout_constraintBottom_toBottomOf="@+id/tv_op"
        app:layout_constraintRight_toRightOf="parent"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="148dp"
        android:onClick="stopMyService"
        android:text="@string/stop_player_service"
        app:layout_constraintBottom_toBottomOf="@+id/btn_start_service"
        app:layout_constraintRight_toRightOf="parent"></Button>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="184dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="512dp" />

</androidx.constraintlayout.widget.ConstraintLayout>